<Window x:Class="CopyMerge.View.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Руководство CopyMerge"
        Width="520"
        Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        
        <FontFamily x:Key="JetBrainsMono">pack://application:,,,/Fonts/#JetBrains Mono</FontFamily>

        <SolidColorBrush x:Key="PrimaryBackground" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#2d2d30"/>
        <SolidColorBrush x:Key="CardBackground" Color="#252526"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0d7377"/>
        <SolidColorBrush x:Key="AccentHover" Color="#14a085"/>
        <SolidColorBrush x:Key="AccentPressed" Color="#0a5d61"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3c3c3c"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#cccccc"/>
        <SolidColorBrush x:Key="TextMuted" Color="#999999"/>

        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource CardBackground}" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="{StaticResource BorderColor}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <Border Grid.Row="0" 
                    Background="{StaticResource AccentColor}" 
                    CornerRadius="12,12,0,0"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="📖" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Руководство CopyMerge" 
                                  FontFamily="{StaticResource JetBrainsMono}" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="White" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="✕"
                            Width="32" Height="32"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="16">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Hidden"
                          Padding="24,20">
                <StackPanel>
                    <TextBlock Text="🚀 Как использовать CopyMerge:"
                              FontFamily="{StaticResource JetBrainsMono}"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimary}"
                              Margin="0,0,0,16"/>
                    
                    <StackPanel Margin="0,0,0,20">
                        <Border Background="{StaticResource SecondaryBackground}"
                                CornerRadius="6"
                                Padding="16,12"
                                Margin="0,0,0,8">
                            <TextBlock FontFamily="{StaticResource JetBrainsMono}">
                                <Run Text="1. " FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                <Run Text="Ctrl+C" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                <Run Text=" - обычное копирование (заменяет буфер)" Foreground="{StaticResource TextPrimary}"/>
                            </TextBlock>
                        </Border>
                        
                        <Border Background="{StaticResource SecondaryBackground}"
                                CornerRadius="6"
                                Padding="16,12"
                                Margin="0,0,0,8">
                            <TextBlock FontFamily="{StaticResource JetBrainsMono}">
                                <Run Text="2. " FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                <Run Text="Ctrl+Shift+C" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                <Run Text=" - добавляет к уже скопированному тексту" Foreground="{StaticResource TextPrimary}"/>
                            </TextBlock>
                        </Border>
                        
                        <Border Background="{StaticResource SecondaryBackground}"
                                CornerRadius="6"
                                Padding="16,12"
                                Margin="0,0,0,8">
                            <TextBlock FontFamily="{StaticResource JetBrainsMono}">
                                 <Run Text="3. " FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                 <Run Text="Настройте разделитель в настройках" Foreground="{StaticResource TextPrimary}"/>
                            </TextBlock>
                        </Border>
                        
                        <Border Background="{StaticResource SecondaryBackground}"
                                CornerRadius="6"
                                Padding="16,12">
                            <TextBlock FontFamily="{StaticResource JetBrainsMono}">
                                <Run Text="4. " FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                <Run Text="История сохраняет последние 100 элементов" Foreground="{StaticResource TextPrimary}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="💡 Советы:"
                              FontFamily="{StaticResource JetBrainsMono}"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimary}"
                              Margin="0,0,0,16"/>
                    
                    <StackPanel>
                        <TextBlock Text="• Приложение работает в фоне"
                                  FontFamily="{StaticResource JetBrainsMono}" 
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="• Используйте системный трей для быстрого доступа"
                                  FontFamily="{StaticResource JetBrainsMono}" 
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="• Автозапуск можно настроить в настройках"
                                  FontFamily="{StaticResource JetBrainsMono}" 
                                  Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            
            <Border Grid.Row="2" 
                    Background="{StaticResource SecondaryBackground}"
                    CornerRadius="0,0,12,12"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource BorderColor}"
                    Padding="24,16">
                <Grid>
                    <Button Content="Понятно" 
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>